{
  "manifest_version": 3,
  "name": "LinkedIn Bulk Actions",
  "version": "1.0.0",
  "description": "Automate accepting/denying invitations and sending connection requests on LinkedIn",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_title": "LinkedIn Bulk Actions",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/mynetwork/invitation-manager/*"],
      "js": ["invitations.js"]
    },
    {
      "matches": ["https://www.linkedin.com/search/results/*"],
      "js": ["search.js"]
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}